<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/players/new.css">

<% if (!user) { %>
  <link rel="stylesheet" href="/stylesheets/siwg.css">
<% } %>
</head>
<body>
  <nav>
    <a href="/">home page.</a>
    <a href="/basketball">basketball.</a>
    <a href="/teams/new">add team.</a>
    <a href="/players/new">add player.</a>
    <a href="/profiles/<%= user.profile._id %>">my profile.</a>
    <% if (user) { %>
      <a href="/auth/logout">
        <button type="submit">logout.</button>
      </a>
    <% } else { %>
      <a href="/auth/google" class="siwg-link">
        <button type="submit" class="siwg">
          <img id="siwg-image" alt="Sign in with Google" />
        </button>
      </a>
    <% } %>
  </nav>
<main>
  <h1><%= player.name %>: <%= player.team %>, <%= player.year %></h1>
  <h2><%= player.name %>'s season stats:</h2>
  <form action="/players/<%= player._id %>?_method=PUT" method="POST">
    <h3>
      games played:
      <input type="text" name="games" value="<%= player.games %>" autocomplete="off"></h3>
    <h3>
      points:
      <input type="text" name="points" value="<%= player.points %>" autocomplete="off"></h3>
    <h3>
      rebounds:
      <input type="text" name="rebounds" value="<%= player.rebounds %>" autocomplete="off"></h3>
    <h3>
      assists:
      <input type="text" name="assists" value="<%= player.assists %>" autocomplete="off"></h3>
    <h3>
      blocks:
      <input type="text" name="blocks" value="<%= player.blocks %>" autocomplete="off"></h3>
    <div class="formButtons">
      <button type="submit">update player stats</button>
      <a href="/players/<%= player._id %>">
        <button>cancel</button>
      </a>
    </div>
  </form>
</main>

<%- include('../partials/footer') %>