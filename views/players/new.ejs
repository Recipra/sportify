<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/new.css">
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/players" method="POST">
    <label for="name-input">Player Name:</label>
    <input type="text" name="name" id="name-input">
    <label for="year-input">Year:</label>
    <input type="number" name="year" id="year-input">
    <label for="team-input">Team:</label>
    <input type="text" name="team" id="team-input">
    <button type="submit">Add Player</button>
  </form>
  <ul>
    <% players.forEach(player => { %>
      <li><%= player.name %>, player for the <%= player.team %> in <%= player.year %></li>
    <% }) %>
  </ul>
</main>

<%- include('../partials/footer') %>